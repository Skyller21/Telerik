.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="title") Name
                option(value="dateAdded") Date Added
    br
    table.table
        tr
            th Name
            th Date Added
        tr(ng-repeat="game in games | filter: search | orderBy: sort")
            td
                a(href="#/games/{{ game._id }}") {{ game.name }}
            td {{ game.dateAdded | date }}